@model IEnumerable<BibliotecaPedro.Models.Pessoa>

@{
    ViewBag.Title = "Cadastro de Pessoas";
}

<h2>Cadastro de Pessoas</h2>

<p>
    @Html.ActionLink("Nova Pessoa", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.PessoaNome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CPF)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.PessoaNome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CPF)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.PessoaId }) |
            @Html.ActionLink("Detalhes", "Details", new { id = item.PessoaId }) |
            @Html.ActionLink("Deletar", "Delete", new { id = item.PessoaId })
        </td>
    </tr>
}

</table>
